#list 
    margin: 0 5%

    #wrapper
        text-align: center

        .card
            size = 7.2vw
            
            position: relative
            
            display: inline-block
            width: size
            height: 1.45 * size
            padding: 0
            margin: 1.25vw 1.25vw
            
            background-color: #fff
            box-shadow: 0 0 0.4vw rgba(#000, .4)
            
            .name
                width: 100%
                height: 12.5%
                
                background-color: #445764
                color: #fff
                
            .exp
                width: 100%
                height: 12.5%
                
                background-color: #7d8e9e
                color: #fff
                
            img
                width: 90%
                height: 65%
                margin: 7.5% 5%
                
                box-shadow: 0 0 0.35vw rgba(#000, .35)
                
            .menu-cover
                position: absolute
                top: 0
                left: 0
                
                display: none
                width: 100%
                height: 100%
                margin: 0
                padding: 0 
                z-index: 1000
                
                background-color: rgba(#fafafa, .9)
                
                .buttons-wrapper
                    position: absolute
                    top: 50%
                    left: 50%
                    transform: translate(-50%, -50%)

                    button
                        display: inline-flex
                        width: 100%
                        padding: 0.5vh 0
                        
                        border: none
                        background-color: transparent
                        text-align: left
                        vertical-align: middle
                        font-size: 14px
                        
                        .material-icons
                            margin: 0 0.2vw
                        
                        &:hover, &:focus
                            outline: none
                            
                            span
                                text-decoration: underline