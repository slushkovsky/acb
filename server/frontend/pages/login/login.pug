extends ../_layout.pug

block deps
    +css('login/login.css')

block body
    .card
        img(
            src='http://ssl.gstatic.com/accounts/ui/avatar_2x.png'
        )
        p#profile-name.profile-name-card
        form(method='POST')
            | {% csrf_token %}
            span#reauth-email.reauth-email
            input.form-control(
                type='text' 
                placeholder='Email'     
                name='email' 
                required 
                autofocus
            )
          
            input.form-control(
                type='password'
                placeholder='Password'  
                name='password' 
                required
            )
                      
            button.btn(
                class='btn-lg btn-primary btn-block btn-signin' type='submit'
            ) Sign in

            a#forgot-pass Forgot password
            a#registration Registration
